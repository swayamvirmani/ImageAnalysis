<Window x:Class="ImageAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medical Image Viewer"
        Height="550"
        Width="1000"
        Background="#121212">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Margin="0,0,0,12">
            <Button Content="Upload File"
                    Width="130"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="UploadFile_Click"/>

            <Button Content="Upload Folder"
                    Width="150"
                    Height="35"
                    Click="UploadFolder_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#1E1E1E"
                    CornerRadius="6"
                    Padding="5">
                <Image Name="ImageViewer"
                       Stretch="Uniform"
                       MouseWheel="ImageViewer_MouseWheel"/>
            </Border>

            
            <StackPanel Grid.Column="1"
                        Margin="10,0,0,0">
                <TextBlock Name="StatusText"
                           Foreground="#2D9CDB"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>

                <ListView Name="MetadataList">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Field"
                                            Width="150"
                                            DisplayMemberBinding="{Binding Key}"/>
                            <GridViewColumn Header="Value"
                                            Width="220"
                                            DisplayMemberBinding="{Binding Value}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>